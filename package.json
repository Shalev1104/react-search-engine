    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Shalev1104/react-search-engine"
    },
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "patch": "npm version patch",
        "minor": "npm version minor",
        "major": "npm version major"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "module": "dist/react-search-engine.esm.js",
    "size-limit": [
        {
            "path": "dist/react-search-engine.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-search-engine.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.8.4",
        "husky": "^8.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.0",
        "typescript": "^3.9.10"
    }
